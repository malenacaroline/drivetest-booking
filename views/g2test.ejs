<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include ('partials/links.ejs') -%>
    <title>Book DriveTest - G2 Test</title>
  </head>
  <body class="bg-gray-custom">
    <%- include ('partials/header.ejs') -%>
    <main>
      <div class="container-fluid bg-light col-lg-6 py-4 g2-container">
        <h2 class="text-center">G2 Test</h2>
        <h5>Personal Information</h5>
        <form>
          <div class="mb-3">
            <label for="fName" class="form-label font-weight-bold"
              >First Name</label
            >
            <input type="text" class="form-control" id="fName" />
          </div>
          <div class="mb-3">
            <label for="lName" class="form-label font-weight-bold"
              >Last Name</label
            >
            <input type="text" class="form-control" id="lName" />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="licenseNumber"
              >License Number</span
            >
            <input type="text" class="form-control me-2" id="licenseNumber" />
            <span class="input-group-text" id="age">Age</span>
            <input type="text" class="form-control" id="age" />
          </div>
          <div class="mb-3">
            <label for="dob" class="form-label font-weight-bold">DOB</label>
            <input type="text" class="form-control" id="dob" />
          </div>
          <h5>Car Information</h5>
          <div class="input-group mb-3">
            <span class="input-group-text" id="iemake">IE Make</span>
            <input type="text" class="form-control me-2" id="iemake" />
            <span class="input-group-text" id="model">Model</span>
            <input type="text" class="form-control" id="model" />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="year">Year</span>
            <input type="text" class="form-control me-2" id="year" />
            <span class="input-group-text" id="plate">Plate Number</span>
            <input type="text" class="form-control" id="plate" />
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </main>
    <%- include ('partials/footer.ejs') -%>
    <%- include ('partials/scripts.ejs') -%>
  </body>
</html>
